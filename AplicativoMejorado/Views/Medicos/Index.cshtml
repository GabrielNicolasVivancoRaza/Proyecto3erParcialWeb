<div class="text-end mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAgregarMedico">
        <i class="bi bi-plus-circle"></i> Nuevo Médico
    </button>
</div>

<div id="divTable" class="mt-4"></div>

<div class="modal fade" id="modalEditarMedico" tabindex="-1" aria-labelledby="modalEditarMedicoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarMedicoLabel">Editar Médico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmEditarMedico" method="post" class="row g-3">
                    <input type="hidden" name="id" id="id">

                    <div class="col-md-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre del médico" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" minlength="2" required>
                    </div>

                    <div class="col-md-6">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Apellido del médico" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" minlength="2" required>
                    </div>

                    <div class="col-md-6">
                        <label for="especialidadId" class="form-label">Especialidad</label>
                        <input type="number" class="form-control" name="especialidadId" id="especialidadId" placeholder="ID especialidad. Ej: 1" min="1" required>
                    </div>

                    <div class="col-md-6">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" name="telefono" id="telefono" placeholder="Ej: 0987654321" pattern="[0-9]+" maxlength="10" minlength="10" required>
                    </div>

                    <div class="col-md-12">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Ej: doctor@hospital.com" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-warning" onclick="GuardarCambiosMedico()">
                    <i class="bi bi-pencil-square"></i> Editar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAgregarMedico" tabindex="-1" aria-labelledby="modalAgregarMedicoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAgregarMedicoLabel">Agregar Médico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmAgregarMedico" method="post" class="row g-3">
                    <input type="hidden" name="id" id="id">

                    <div class="col-md-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre del médico" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" minlength="2" required>
                    </div>

                    <div class="col-md-6">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Apellido del médico" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" minlength="2" required>
                    </div>

                    <div class="col-md-6">
                        <label for="especialidadId" class="form-label">Especialidad</label>
                        <input type="number" class="form-control" name="especialidadId" id="especialidadId" placeholder="ID especialidad. Ej: 1" min="1" required>
                    </div>

                    <div class="col-md-6">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" name="telefono" id="telefono" placeholder="Ej: 0987654321" pattern="[0-9]+" maxlength="10" minlength="10" required>
                    </div>

                    <div class="col-md-12">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Ej: doctor@hospital.com" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="GuardarMedico()">
                    <i class="bi bi-floppy"></i> Agregar
                </button>
            </div>
        </div>
    </div>
</div>

<link href="~/css/tablas.css" rel="stylesheet" />
<script src="~/js/generic.js"></script>
<script src="~/js/medicos.js"></script>

<script>
    function BuscarMedico() {
        let filtro = document.getElementById("txtBuscar").value.toLowerCase();
        let filas = document.querySelectorAll("#divTable table tbody tr");

        filas.forEach(fila => {
            let texto = fila.textContent.toLowerCase();
            fila.style.display = texto.includes(filtro) ? "" : "none";
        });
    }
</script>
